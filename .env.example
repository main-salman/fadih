# Exoscale S3 Configuration
EXOSCALE_S3_ACCESS_KEY=your-s3-access-key
EXOSCALE_S3_SECRET_KEY=your-s3-secret-key
EXOSCALE_S3_ENDPOINT=sos-de-fra-1.exo.io
EXOSCALE_S3_REGION=de-fra-1
EXOSCALE_BUCKET=foi-archive-terraform
EXOSCALE_S3_PUBLIC_URL=https://sos-de-fra-1.exo.io/foi-archive-terraform

# Admin Configuration
admin_email=admin@yourdomain.com
admin_password=your-secure-admin-password

# Rate limiting
UPLOAD_TIMEOUT_SECONDS=120

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production

# Database - MySQL
MYSQL_HOST=your-mysql-host.exoscale.com
MYSQL_PORT=3306
MYSQL_USER=foi_user
MYSQL_PASSWORD=your-mysql-password
MYSQL_DATABASE=foi_archive
DATABASE_URL=mysql+pymysql://foi_user:your-mysql-password@your-mysql-host.exoscale.com:3306/foi_archive

# Email Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@foi-archive.com

# Redis Configuration (optional - falls back to in-memory)
REDIS_URL=redis://localhost:6379

# Application Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://yourdomain.com

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com 